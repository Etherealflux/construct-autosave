{
    "name": "Construct Autosave",
    "version": "0.0.1",
    "description": "Autosaves your Construct project",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://editor.construct.net/"],
            "js": ["autosave.js"]
        }
    ]
}
